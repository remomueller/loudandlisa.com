!!!
%html
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=Edge,chrome=1', http: { equiv: 'X-UA-Compatible' } }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %meta{ name: "description", content: "Loud and Lisa Creative Services" }
    %meta{ name: "author", content: "" }

    %title Loud and Lisa

    = favicon_link_tag 'loudandlisa.ico'
    = csrf_meta_tags

    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      %script{ src: "//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js" }
      %script{ src: "//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js" }

    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_tag "var root_url='#{request.script_name + '/'}';var auth_token='#{form_authenticity_token}';"
  %body.light-texture
    .container.header-content
      = render 'layouts/header'
    .container.menu-content
      = render 'layouts/menu'

    .container.main-content
      .row
        .col-sm-6
          .highlights
            = yield
        .col-sm-6.hidden-xs
          = render 'layouts/right_image'

    .footer-container
      .container
        .footer= render 'layouts/representation'
